# =============================================================================
# Jetson Edge AI Point - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.template .env
# =============================================================================

# -----------------------------------------------------------------------------
# Network Configuration (macvlan)
# -----------------------------------------------------------------------------
# Host network interface (check with: ip link show)
HOST_INTERFACE=eth0

# Subnet and gateway of your LAN
NETWORK_SUBNET=192.168.1.0/24
NETWORK_GATEWAY=192.168.1.1

# IP range for macvlan containers (must be within subnet, excluded from DHCP)
MACVLAN_IP_RANGE=192.168.1.240/29

# Static IPs for services (must be within MACVLAN_IP_RANGE)
OLLAMA_IP=192.168.1.241
WHISPER_IP=192.168.1.242

# -----------------------------------------------------------------------------
# Ollama / LLM Configuration
# -----------------------------------------------------------------------------
# Model to pull on startup
OLLAMA_MODEL=PetrosStav/gemma3-tools:4b

# -----------------------------------------------------------------------------
# Google Search Tool Credentials (for Gemma3 tool-calling)
# -----------------------------------------------------------------------------
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CX_ID=your_google_cx_id_here

# -----------------------------------------------------------------------------
# Whisper Configuration
# -----------------------------------------------------------------------------
# Whisper model size: tiny, base, small, medium, large
WHISPER_MODEL=base

# -----------------------------------------------------------------------------
# Watchtower Configuration
# -----------------------------------------------------------------------------
# Check interval in seconds (default: 86400 = 24 hours)
WATCHTOWER_POLL_INTERVAL=86400
